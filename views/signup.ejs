                        <input type="text" id="geo" class="int" maxlength="20" placeholder="ex) 홍대">
                    </span>
                    <span class="error_next_box"></span>
                                                
                
                </div> -->

                

                <!-- JOIN BTN-->
                <div class="btn_area">
                    <button type = "submit " id="btnJoin" onclick="alert('환영합니다!')">
                        <span>가입하기</span>
                    </button>
                </div>

                

            </div> 
            <!-- content-->

        </div> 
           
        <!-- wrapper -->
        </div>
        </form>
        <script src="javascripts/validationSignUpForm.js"></script>
